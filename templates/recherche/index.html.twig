{% extends 'base.html.twig' %}

{% block title %}Hello RechercheController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h2>choisir un dragon et une personne et valide</h2>
    <div class="row mx-md-n5">

        <div class="col px-md-5">
            <div class="p-3 border bg-light">
                {% for value in dragons %}
                    <hr/>
                    <article>
                        <h2>{{ value.nom }} </h2>
                        <img src="{{ value.img }}" width="150" height="150" alt="pas de fichier">
                        <div class="metadata"> vie: {{ value.vie }} </div>
                        <div class="metadata"> puissance: {{ value.puissance }}  </div>
                        <div class="metadata"> défense: {{ value.defense }} </div>
                        <div class="metadata"> dextérité: {{ value.dex }} </div>
                        <div> la vitesse de Dragon {{ value.vitesse }} </div>

                    </article>
                {% endfor %}
            </div>
            <button type="button" style="width: 200px;" class="btn btn-primary btn-lg">Valider Dragon</button>
        </div>

        <div class="col px-md-5">
            <div class="p-3 border bg-light">
                {% for value in personnages %}
                    <hr/>
                    <article>
                        <h2>{{ value.nom }} </h2>
                        <img src="{{ value.img }}" width="150" height="150" alt="pas de fichier">
                        <div class="metadata"> vie: {{ value.vie }} </div>
                        <div class="metadata"> puissance: {{ value.puissance }}  </div>
                        <div class="metadata"> défense: {{ value.defense }} </div>
                        <div class="metadata"> dextérité: {{ value.dex }} </div>
                        <div> la vitesse de Dragon {{ value.vitesse }} </div>

                    </article>
                {% endfor %}
            </div>
            <button type="button" style="width: 200px;" class="btn btn-primary btn-lg">Valider Perso</button>
        </div>
    </div>
</div>
{% endblock %}
