                    <div class="metadata"> la vitesse{{ dragonvitesse }} </div>
                    <div> la dex {{ dragondex }}</div>

                </article>
            </div>
        </div>
        <div class="col px-md-5"><div class="p-3 border bg-light">

                <article>
                    <div>Le Nom de personnage {{ personnagenom }} </div>
                    <img src="https://via.placeholder.com/150" alt="">
                    <div class="metadata">La durée de vie {{ personnagevie }}  </div>
                    <div class="metadata">La puissance  {{ personnagepuissance }}  </div>
                    <div class="metadata">La défanse  {{ personnagedefense }} </div>
                    <div>La vitesse {{ personnagevitesse }}  </div>
                    <div class="metadata">La dex {{ personnagedex }} </div>

                </article>

            </div>
        </div>
    </div>
</div>


    {% if  personnagevitesse  > 44  %}
        {% if  personnagevie < 50  %}
            <h1> Félicitation ta gagné le dragon</h1>
        {% else %}
            <h1> Le dragon a gagné</h1>
        {% endif %}
    {% else %}
        {% if  personnagepuissance >100  %}
            <h1> Félicitation ta gagné le dragon</h1>
        {% else %}
            <h1> Le dragon a gagné</h1>
        {% endif %}
    {% endif %}
{% endblock %}
