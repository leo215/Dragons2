{% extends 'base.html.twig' %}

{% block title %}Hello ComabtController !{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>
    <div class="jumbotron">
        <h1 class="display-4">Combat</h1>

        <hr class="my-4">
    </div>
<div class="example-wrapper">
    <h1>bienvenue sur notre site ! ✅</h1>

    <div class="row mx-md-n5">
        <div class="col px-md-5"><div class="p-3 border bg-light">
                <article>
                    <div>Le Nom de Dragon {{ dragonnom }} </div>
                    <img src="https://via.placeholder.com/150" alt="">
                    <div class="metadata"> La durée de vie{{ dragonvie }} </div>
                    <div class="metadata"> la puissance  {{ dragonpuissance }} </div>
